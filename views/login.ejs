<!DOCTYPE html>
<html lang="ar">
  <head>
    <title>تسجيل الدخول</title>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <%- include('partials/headerhome') %>

  <body>
    <div class="container">
      <h1 style="font-size: 1.2rem">تسجيل الدخول</h1>
      <form action="/login" method="POST">
        <!-- عرض رسالة الخطأ إذا كانت موجودة -->
        <% if (typeof errorMessage !== 'undefined') { %>
        <span class="error-message"><%= errorMessage %></span>
        <% } %>

        <div class="input-box">
          <input type="email" id="email" name="email" required />
          <span for="email">البريد الإلكتروني</span>
        </div>
        <div class="input-box">
          <input type="password" id="password" name="password" required />
          <span for="password">كلمة المرور</span>
        </div>
        <button type="submit">دخول</button>
      </form>
      <p>أو</p>
      <!-- روابط إضافية -->
      <div class="links">
        <a href="/signup">إنشاء حساب جديد؟</a>
        <a href="/forgotPassword">نسيت كلمة المرور؟</a>
      </div>
    </div>
  </body>
  <footer style="margin-top: 14vh"> <%- include('partials/footer') %></footer>
</html>
